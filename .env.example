# Playground Credentials
PLAYGROUND_EMAIL=your-email@example.com
PLAYGROUND_PASSWORD=your-password
# Organization ID from URL: https://app.tryplayground.com/app/YOUR_ORG_ID/parent/feed
PLAYGROUND_ORGANIZATION=YOUR_ORG_ID

# NTFY Configuration
NTFY_ENABLED=true
NTFY_TOPIC=kidpulse
NTFY_SERVER=https://ntfy.sh

# Telegram Configuration
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Schedule (24-hour format, when to send daily summary)
SUMMARY_TIME=17:00

# Timezone
TZ=America/New_York

# Scrape interval in minutes (how often to check for new events)
SCRAPE_INTERVAL=30

# Debug mode
DEBUG=false
