# Playground Credentials
PLAYGROUND_EMAIL=your-email@example.com
PLAYGROUND_PASSWORD=your-password
# Organization ID from URL: https://app.tryplayground.com/app/YOUR_ORG_ID/parent/feed
PLAYGROUND_ORGANIZATION=YOUR_ORG_ID

# NTFY Configuration
NTFY_ENABLED=true
NTFY_TOPIC=kidpulse
NTFY_SERVER=https://ntfy.sh

# Telegram Configuration
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Schedule (24-hour format, when to send daily summary)
SUMMARY_TIME=17:00

# Timezone
TZ=America/New_York

# Scrape interval in minutes (how often to check for new events)
SCRAPE_INTERVAL=30

# Debug mode
DEBUG=false

# Web UI port
WEB_PORT=8080

# AI Parsing (uses LLM to extract events - more robust than regex)
AI_ENABLED=false
AI_PROVIDER=ollama  # "ollama" or "openai"

# Ollama Configuration (local LLM)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen3:8b

# OpenAI Configuration (optional, if using OpenAI instead of Ollama)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
